<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhuye.hougong.view.PersonHomePageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/person_home_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">


            <ImageView
                android:id="@+id/person_home_touxiang"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/person_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@+id/person_home_touxiang"
                android:src="@mipmap/arrow_right"
                android:text="@string/yonghuiming"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/person_home_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_home_name"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/person_home_touxiang"
                android:src="@mipmap/arrow_right"
                android:text="1231564"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/person_home_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/person_home_name"
                android:background="@drawable/person_vip_shape_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="vip1"
                android:textColor="@color/white"
                />

        </RelativeLayout>


        <ImageView
            android:id="@+id/person_home_persondetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/gerenxinxi"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/person_home_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:background="#b3ffffff"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/person_home_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:drawableLeft="@drawable/miss_big"
                android:drawablePadding="8dp"
                android:src="@mipmap/arrow_right"
                android:text="22"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/person_home_dizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/person_home_age"
                android:drawableLeft="@drawable/place"
                android:drawablePadding="8dp"
                android:src="@mipmap/arrow_right"
                android:text="郑州"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/person_home_jietong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="接通率"
                android:textSize="15sp"
                />
        </RelativeLayout>
    </RelativeLayout>

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingRight="12dp"
            android:paddingLeft="18dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="23dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:text="服务价格"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"/>

                <TextView
                    android:id="@+id/person_home_jiage_liaotia"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:drawableLeft="@drawable/video_small"
                    android:layout_marginLeft="13dp"
                    android:text="200金币/分钟"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


                <TextView
                    android:id="@+id/person_home_jiage_video"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:drawableLeft="@drawable/phone_small"
                    android:layout_marginLeft="20dp"
                    android:text="200金币/分钟"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:text="聊天技能"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"/>

                <TextView
                    android:id="@+id/person_home_meishi"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="13dp"
                    android:text="美食"
                    android:background="@drawable/person_liaotian_shape_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/person_home_yinyue"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="13dp"
                    android:text="音乐"
                    android:background="@drawable/person_liaotian_shape_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/person_home_jiaoyou"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="13dp"
                    android:text="交友"
                    android:background="@drawable/person_liaotian_shape_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/person_home_qingting"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="13dp"
                    android:text="倾听"
                    android:background="@drawable/person_liaotian_shape_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/person_home_dontai_detail"
                android:gravity="center_vertical"
                android:layout_marginTop="23dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/person_home_dongtai_shumu"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:text="动态(100)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"/>

                <ImageView
                    android:id="@+id/person_home_dongtai_tou"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/person_home_dongtai_title"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_marginLeft="12dp"
                        android:text="不知道说什么，随便点"
                        android:background="@drawable/btn_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView

                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="12dp"
                        android:drawableLeft="@mipmap/arrow_right"
                        android:id="@+id/person_home_gengxin_time"
                        android:layout_marginLeft="12dp"
                        android:text="20小时前"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/person_home_liwu_shu"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:text="礼物(15)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"/>

                <ImageView
                    android:id="@+id/person_home_liwu_zhong1"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/gift_1"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    />
                <ImageView
                    android:id="@+id/person_home_liwu_zhong2"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/gift_2"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    /><ImageView
                android:id="@+id/person_home_liwu_zhong3"
                android:layout_marginLeft="12dp"
                android:src="@drawable/gift_3"
                android:layout_width="46dp"
                android:layout_height="46dp"
                /><ImageView
                android:id="@+id/person_home_liwu_zhong4"
                android:layout_marginLeft="12dp"
                android:src="@drawable/gift_4"
                android:layout_width="46dp"
                android:layout_height="46dp"
                /><ImageView
                android:id="@+id/person_home_liwu_zhong5"
                android:layout_marginLeft="12dp"
                android:src="@drawable/gift_5"
                android:layout_width="46dp"
                android:layout_height="46dp"
                />

            </LinearLayout>


            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="49dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button

                    android:paddingRight="20dp"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:id="@+id/person_home_video"
                    android:background="@drawable/btn_bg2"
                    android:drawableLeft="@drawable/video_big"
                    android:text="视频"
                    android:layout_width="141dp"
                    android:layout_height="48dp" />

                <Button
                    android:paddingRight="20dp"
                    android:paddingLeft="30dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:layout_marginLeft="35dp"
                    android:layout_toRightOf="@+id/person_home_video"
                    android:id="@+id/person_home_audio"
                    android:background="@drawable/btn_bg1"
                    android:drawableLeft="@drawable/phone_big"
                    android:text="音频"
                    android:layout_width="141dp"
                    android:layout_height="48dp" />

            </RelativeLayout>

        </LinearLayout>
        
        <LinearLayout
            android:layout_marginTop="43dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="36dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/person_guanzhu"
                android:src="@drawable/gaungzhu_on"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
            <ImageView
                android:id="@+id/person_dasang"
                android:layout_marginTop="14dp"
                android:src="@drawable/dasang"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
            <ImageView
                android:id="@+id/person_liaotian"
                android:layout_marginTop="14dp"
                android:src="@drawable/liaotian"
                android:layout_width="36dp"
                android:layout_height="36dp"/>

        </LinearLayout>



    </RelativeLayout>
    





</LinearLayout>
