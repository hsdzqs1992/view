<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuye.hougong.view.FaBuActivity">

    <com.zhuye.hougong.weidgt.MyToolBar2
        android:id="@+id/fabu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.zhuye.hougong.weidgt.MyToolBar2>


    <EditText
        android:id="@+id/fubu_content"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="图片"
            android:id="@+id/fabu_xuanze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="显示位置"
            android:id="@+id/fabu_weizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</LinearLayout>
