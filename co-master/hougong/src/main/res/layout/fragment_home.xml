<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/home_drawer"
    android:layout_height="match_parent"
    >
<LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">



    <RelativeLayout
        android:gravity="center"
        android:id="@+id/self_create_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/tab_blue_bg">
    <ImageView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:padding="8dip"
        android:src="@drawable/seach"/>

    <ImageView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:padding="8dip"
        android:src="@drawable/screen"/>

    <com.zhuye.hougong.weidgt.PagerSlidingTabStrip
        android:id="@+id/tab_strip"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/message"
        android:layout_toRightOf="@id/search"
        android:background="@null"
        android:fillViewport="false"
        app:pstsIndicatorHeight="3dp"
        app:pstsScrollOffset="150dp"

        app:pstsTabPaddingLeftRight="10dp"
        />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:orientation="vertical"
        android:id="@+id/left_drawer"
        android:layout_width="209dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/white">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary">


            <ImageView

                android:src="@drawable/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/white"
                android:layout_marginLeft="6dp"
                android:text="主播筛选"
                android:textSize="20sp"
                android:src="@drawable/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
        android:layout_marginTop="24dp"
        android:textColor="#666666"
        android:layout_marginLeft="11dp"
        android:text="用户性别"
        android:textSize="16sp"
        android:src="@drawable/screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginLeft="11dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/home_sex_buxian"
                android:gravity="center"
                android:background="@drawable/tv_slide_bg"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/red"
                android:layout_marginLeft="11dp"
                android:text="不限"
                android:textSize="14sp"
                android:src="@drawable/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:clickable="true"
                android:id="@+id/home_sex_nv"
                android:gravity="center"
                android:background="@drawable/tv_slidenor_bg"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="24dp"
                android:textColor="#666666"
                android:layout_marginLeft="11dp"
                android:text="女"
                android:textSize="14sp"
                android:src="@drawable/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/home_sex_nan"
                android:gravity="center"
                android:background="@drawable/tv_slidenor_bg"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="24dp"
                android:textColor="#666666"
                android:layout_marginLeft="11dp"
                android:text="男"
                android:textSize="14sp"
                android:src="@drawable/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="24dp"
            android:textColor="#666666"
            android:layout_marginLeft="11dp"
            android:text="所在范围"
            android:textSize="16sp"
            android:src="@drawable/screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginLeft="11dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/home_tongcheng_buxian"
                android:gravity="center"
                android:background="@drawable/tv_slide_bg"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/red"
                android:layout_marginLeft="11dp"
                android:text="不限"
                android:textSize="14sp"
                android:src="@drawable/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/home_tongcheng_tongcheng"

                android:gravity="center"
                android:background="@drawable/tv_slidenor_bg"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="24dp"
                android:textColor="#666666"
                android:layout_marginLeft="11dp"
                android:text="同城"
                android:textSize="14sp"
                android:src="@drawable/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/home_tongcheng_qite"

                android:gravity="center"
                android:background="@drawable/tv_slidenor_bg"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="24dp"
                android:textColor="#666666"
                android:layout_marginLeft="11dp"
                android:text="其他"
                android:textSize="14sp"
                android:src="@drawable/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="24dp"
            android:textColor="#666666"
            android:layout_marginLeft="11dp"
            android:text="通话类型"
            android:textSize="16sp"
            android:src="@drawable/screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginLeft="11dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/home_tonghua_buxian"

                android:gravity="center"
                android:background="@drawable/tv_slide_bg"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/red"
                android:layout_marginLeft="11dp"
                android:text="不限"
                android:textSize="14sp"
                android:src="@drawable/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/home_tonghua_shipin"
                android:gravity="center"
                android:background="@drawable/tv_slidenor_bg"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="24dp"
                android:textColor="#666666"
                android:layout_marginLeft="11dp"
                android:text="视频"
                android:textSize="14sp"
                android:src="@drawable/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/home_tonghua_yuyin"
                android:gravity="center"
                android:background="@drawable/tv_slidenor_bg"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="24dp"
                android:textColor="#666666"
                android:layout_marginLeft="11dp"
                android:text="语音"
                android:textSize="14sp"
                android:src="@drawable/screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <Button
            android:id="@+id/home_queren"
            android:gravity="center"
            android:background="@drawable/btn_slidenor_bg"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text="确认"
            android:textSize="16sp"
            android:layout_width="174dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>