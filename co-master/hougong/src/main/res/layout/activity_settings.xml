<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuye.hougong.view.SettingsActivity">

    <com.zhuye.hougong.weidgt.MyToolBar2
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/setting_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.zhuye.hougong.weidgt.MyToolBar2>

   <LinearLayout
       android:padding="@dimen/padding"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <RelativeLayout
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView

               android:textSize="@dimen/common_text_size"
               android:text="@string/bangding"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />


           <ImageView
               android:src="@mipmap/arrow_right"
               android:layout_alignParentRight="true"
               android:id="@+id/stting_bangding"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </RelativeLayout>

       <RelativeLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textSize="@dimen/common_text_size"
               android:text="@string/heimingdan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />


           <ImageView
               android:src="@mipmap/arrow_right"
               android:layout_alignParentRight="true"
               android:id="@+id/stting_heimingdan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </RelativeLayout>
       <RelativeLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textSize="@dimen/common_text_size"
               android:text="@string/yinshen"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />


           <ImageView
               android:src="@mipmap/arrow_right"
               android:layout_alignParentRight="true"
               android:id="@+id/stting_yinsehn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </RelativeLayout>

       <RelativeLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textSize="@dimen/common_text_size"
               android:text="@string/feedback"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />


           <ImageView
               android:src="@mipmap/arrow_right"
               android:layout_alignParentRight="true"
               android:id="@+id/stting_feedback"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </RelativeLayout>

       <RelativeLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textSize="@dimen/common_text_size"
               android:id="@+id/setting_qingchu"
               android:text="@string/qingchujilu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>

       <RelativeLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textSize="@dimen/common_text_size"
               android:id="@+id/setting_qingchuhuancun"
               android:text="@string/qingchuhuancun"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>

       <RelativeLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textSize="@dimen/common_text_size"
               android:text="@string/guanyu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />


           <ImageView
               android:src="@mipmap/arrow_right"
               android:layout_alignParentRight="true"
               android:id="@+id/stting_guanyu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>

       <RelativeLayout
           android:id="@+id/setting_logout"
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textSize="@dimen/common_text_size"
               android:text="@string/logout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>

   </LinearLayout>
</LinearLayout>
