<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="20dp"
              android:layout_height="match_parent">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/find_zuixin_touxiang"
            android:src="@mipmap/ic_launcher"
            android:layout_width="42dp"
            android:layout_height="42dp"/>

        <TextView
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/find_zuixin_touxiang"
            android:text="用户名"
            android:id="@+id/find_zuixin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="3dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/tv_find_bg"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/miss"
            android:textSize="11sp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/find_zuixin_name"
            android:text="22"
            android:id="@+id/find_zuixin_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/location"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="12dp"
        android:layout_below="@+id/find_zuixin_name"
        android:layout_toRightOf="@+id/find_zuixin_touxiang"
        android:text="郑州"
        android:id="@+id/find_zuixin_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="3dp"
            android:textColor="#999999"
            android:textSize="11sp"
            android:layout_alignParentRight="true"
            android:text="22-10-15"
            android:id="@+id/find_zuixin_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <TextView
        android:textColor="#666666"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="22-10-1522-10-1522-10-1522-10-15"
        android:id="@+id/find_zuixin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="11dp"
        android:id="@+id/find_zuixin_tuji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="16dp">
            <ImageView
                android:layout_marginLeft="23dp"
                android:gravity="center"
                android:src="@drawable/find_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#fbb829"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/find_zuixin_dianzan"
                android:text="点赞"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/find_zuixin_pinglun"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="16dp">
            <ImageView
                android:layout_marginLeft="23dp"
                android:gravity="center"
                android:src="@drawable/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#aaaaaa"
                android:textSize="14sp"
                android:gravity="center"
                android:text="评论"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="16dp">
            <ImageView
                android:layout_marginLeft="23dp"
                android:gravity="center"
                android:src="@drawable/give_a_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#aaaaaa"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/find_zuixin_liwu"
                android:text="礼物"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>
