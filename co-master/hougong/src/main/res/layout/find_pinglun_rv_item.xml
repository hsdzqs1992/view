<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="13dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/piniglun_item_touxiang"
            android:src="@mipmap/ic_launcher"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <TextView
            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/piniglun_item_touxiang"
            android:id="@+id/piniglun_item_name"
            android:text="@string/yonghuiming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/piniglun_item_zanshu"
            android:id="@+id/piniglun_item_dianzantubiao"
            android:src="@drawable/praise_of"
            android:layout_width="17dp"
            android:layout_height="17dp" />
        <TextView
            android:textColor="#999"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:id="@+id/piniglun_item_zanshu"
            android:layout_alignParentRight="true"
            android:text="46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:textColor="#666"
        android:textSize="14sp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="5dp"
        android:id="@+id/piniglun_item_content"
        android:text="46-------------------------------------------"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="45dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#333"
            android:textSize="12sp"
            android:id="@+id/piniglun_item_time"
            android:text="5小时前"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#333"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:id="@+id/piniglun_item_huifu"
            android:text="70回复"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
