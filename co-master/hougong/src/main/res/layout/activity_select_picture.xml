<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuye.hougong.view.SelectPictureActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/home_color"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/person_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/mywalot_zhuanqian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:text="发表"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/mywalot_qianbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:text="我的相册"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="#eee"
            android:id="@+id/select_photo"
            android:src="@drawable/photo1"
            android:layout_width="118dp"
            android:layout_height="118dp"/>
        <RelativeLayout
            android:layout_marginLeft="11dp"
            android:layout_width="118dp"
            android:layout_height="118dp">
            <ImageView
                android:id="@+id/select_touxiang"
                android:src="@mipmap/ic_launcher"
                android:layout_width="118dp"
                android:layout_height="118dp"/>
            <TextView
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#fff"
                android:text="当前头像"
                android:background="#f75152"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </RelativeLayout>
       
        <ImageView
            android:layout_marginLeft="11dp"
            android:id="@+id/select_qite"
            android:src="@mipmap/ic_launcher"
            android:layout_width="118dp"
            android:layout_height="118dp"/>
    </LinearLayout>
</LinearLayout>
